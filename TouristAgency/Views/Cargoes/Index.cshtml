@model IEnumerable<TouristAgency.Models.Cargo>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CargoWeight)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CargoType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Flight)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CargoWeight)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CargoType)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Flight.FlightId)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.CargoId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.CargoId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.CargoId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
